
<div class="col-md-3">
  <div class="mb-3">
    <h2>User info</h2>

    <%= image_tag user.get_profile_image(100,100) %>
    <table class="table">
      <tr><th>name</th><th><%= user.name %></th></tr>
      <tr><th>introduction</th><th><%= user.introduction %></th></tr>
    </table>

    <%= link_to edit_user_path(user.id), class: "btn btn-block btn-outline-secondary mt-5" do %>
    <i class="fa-solid fa-user-gear"></i>
    <% end %>

  </div>

  <div>
    <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <p>Title</p>
    <%= f.text_field :title, class: "form-control" %>
    <p>Opinion</p>
    <%= f.text_area :body, class: "form-control" %>
    <%= f.submit 'Create Book', class: "btn btn-md btn-success mt-4" %>
  <% end %>
  </div>
</div>