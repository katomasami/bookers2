<%= flash[:notice] %>
<div class="container">
  <div class="row no-gutters">   
<%= render 'template/list', user: @user, book: @book  %>

<!-- ユーザーの投稿一覧 -->
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class= "table table-hover">
    <thead>
      <tr><th></th><th>Title</th><th>Opinion</th></tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag book.user.get_profile_image(80, 80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>