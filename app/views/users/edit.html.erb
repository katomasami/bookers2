<div class="col-md-4 col-sm-8 mx-2 mx-sm-auto rounded px-0 my-3">
<h2>User info</h2>

<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, class: "form-control", autofocus: true, id:"inputName", placeholder:"名前"%>
  <p>
    <div>
      <label for="inputImage">Image</label>
    </div>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </p>
    
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, class: "form-control", autofocus: true, id:"inputIntroduction"%>
  <%= f.submit "Update User", class: "btn btn-md btn-secondary mt-3" %>
<% end %>